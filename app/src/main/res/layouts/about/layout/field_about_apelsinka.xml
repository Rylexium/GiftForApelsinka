<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/field_about_apelsinka"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="9dp"
        >
        <TextView
            android:id="@+id/field_about_apelsinka_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Про меня 🍊"
            android:gravity="center"
            android:textSize="17sp"
            android:elegantTextHeight="true"
            android:foreground="?attr/selectableItemBackground"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            />
        <LinearLayout
            android:id="@+id/layout_textview_about_apelsinka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:foreground="?attr/selectableItemBackground"
            >
            <TextView
                android:id="@+id/textview_about_apelsinka"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center|top"
                android:foreground="?attr/selectableItemBackground"
                />
            <ImageView
                android:id="@+id/mouse_of_apelsinka"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="0.3"
                android:layout_gravity="center|top"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.gift_for_apelsinka.util.views.ImageViewPager
                android:id="@+id/view_pager_of_image_logo"
                android:layout_width="match_parent"
                android:layout_marginTop="9dp"
                android:layout_height="170dp"
                />
            <ProgressBar
                android:id="@+id/progressbar_view_pager_of_image_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="?attr/colorPrimary"
                android:visibility="gone" />
        </RelativeLayout>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabDots_for_view_pager_of_image_logo"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            android:background="@android:color/transparent"
            app:tabPaddingStart="6dp"
            app:tabPaddingEnd="6dp"
            app:tabIndicatorHeight="0dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>

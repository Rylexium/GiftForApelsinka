<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/field_about_oskar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="9dp"
        >
        <TextView
            android:id="@+id/field_about_lexa_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Немного меня и Лёши 🥨"
            android:gravity="center"
            android:textSize="17sp"
            android:elegantTextHeight="true"
            android:foreground="?attr/selectableItemBackground"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorPrimaryVariant"
            />
        <com.example.gift_for_apelsinka.util.views.ImageViewPager
            android:id="@+id/view_pager_of_image_lexa"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:foreground="?attr/selectableItemBackground"
            />
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabDots_for_view_pager_of_image_lexa"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            android:background="@android:color/transparent"
            app:tabPaddingStart="6dp"
            app:tabPaddingEnd="6dp"
            app:tabIndicatorHeight="0dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:weightSum="1"
                >
                <TextView
                    android:id="@+id/greetings_for_apelsinka"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Доброе утро, Ксения Александровна!"
                    android:textSize="24sp"
                    android:gravity="center"
                    />
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/view_pager_of_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.71"
                    />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/view_pager_of_statement"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.29"
                    />
            </LinearLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <Button
            android:id="@+id/facts_about_apelsinka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Факты обо мне"
            android:textAllCaps="false"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            />
        <Button
            android:id="@+id/photo_with_apelsinka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Мои фотки"
            android:textAllCaps="false"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Поменять тему"
            android:textAllCaps="false"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            />
        <include layout="@layout/field_of_developer" />

    </LinearLayout>

</ScrollView>